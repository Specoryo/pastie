<div class="container">
  <div class="vertical-center-row">
    <div align="center">
      <h1>Recent Uploads</h1>
      <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Language</th>
            <th>Creator</th>
            <th>Uploaded On</th>
            <th>Upvotes</th>
            <th colspan="3"></th>
          </tr>
        </thead>


        <tbody>
          <% @listings.each do |listing| %>
            <tr>
              <td><%= link_to listing.name, listing %></td>
              <td><%= listing.language %></td>
              <td><%= link_to listing.user.username, listing.user %></td>
              <td><%= time_ago_in_words(listing.created_at) %></td>
              <td>VOTES</td>

              <% if listing.user == current_user %>
                <td><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-primary" %></td>
                <td><%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
              <% end %>

            </tr>
          <% end %>

        </tbody>
      </table>
      <%= will_paginate @listings %>
    </div>
  </div>
<div>

<br>

<%= link_to 'New Paste', new_listing_path, class: "btn btn-primary" %>
