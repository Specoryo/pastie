<div class="container">
  <div class="vertical-center-row">
    <div align="center">
      <h1>Recent Uploads</h1>
      <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Language</th>
            <th>Creator</th>
            <th colspan="3"></th>
          </tr>
        </thead>


        <tbody>
          <% @listings.each do |listing| %>
            <tr data-link="<%= listing_path(listing)%>">
              <td><%= listing.name %></td>
              <!--<td><%= link_to listing.name, listing, class: "btn btn-link"%></td>-->
              <td><%= listing.language %></td>
              <td><%= listing.user.username %></td>
              <!--<td><%= link_to 'Show', listing, class: "btn btn-link" %></td>-->

              <% if listing.user == current_user %>
                <td><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-primary" %></td>
                <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
              <% end %>

            </tr>
          <% end %>

        </tbody>
      </table>
      <%= will_paginate @listings %>
    </div>
  </div>
<div>

<br>

