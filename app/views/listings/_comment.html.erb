<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <div class="row">
          <div class="col-md-12">
            <div class="col-md-6">
              <%= link_to comment.user.username, comment.user%>
              <%= ": #{time_ago_in_words(comment.created_at)}"%>
            </div>
            <div class="col-md-6 text-right">
              <span class="btn-group">
                <%= link_to like_listing_comment_path(comment.listing_id, comment.id), class: "like", method: :put do %>
                <button aria-label="Left Align" class="btn btn-info" type="button">
                  <span aria-hidden="true" class="glyphicon glyphicon-chevron-up glyphicon-align-center"></span>
                  <span class="badge"><%= comment.get_upvotes.size%></span>
                </button>
                <% end %>

                <%= link_to unlike_listing_comment_path(comment.listing_id, comment.id), class: "unlike", method: :put do %>
                <button aria-label="Left Align" class="btn btn-info" type="button">
                  <span aria-hidden="true" class="glyphicon glyphicon-chevron-down glyphicon-align-center"></span>
                  <span class="badge"><%= comment.get_downvotes.size%></span>
                </button>
                <% end %>
              </span>
            </div>
          </div>
        </div>
      </h4>
    </div>

    <div class="panel-body">
      <%= comment.body %>
    </div>
    <div class="panel-footer"></div>
  </div>
</div>
